<div id="container">
    <h1 class="title">NeDB kars</h1>

    <div class="flex flex-row">
        <form method="POST" action="/addVehicle">
            <h3 class="form-title">Vehicle data:</h3>

            <table>
                <tbody>
                    <tr><td><label for="cb-insured">ubezpieczony:</label></td><td><input id="cb-insured" type="checkbox" name="insured"></td></tr>
                    <tr><td><label for="cb-gas">benzyna:</label></td><td><input id="cb-gas" type="checkbox" name="gas"></td></tr>
                    <tr><td><label for="cb-broken">uszkodzony:</label></td><td><input id="cb-broken" type="checkbox" name="broken"></td></tr>
                    <tr><td><label for="cb-fxf">napęd 4x4:</label></td><td><input id="cb-fxf" type="checkbox" name="fxf"></td></tr>
                </tbody>
            </table>

            <input class="control-style" type="submit" value="ADD TO DATABASE">
        </form>
        <div class="ml-16" >
            <h3 class="form-title">All vehicles:</h3>

            <table>
                <thead>
                    <tr><th></th><th>ubezpieczony</th><th>benzyna</th><th>uszkodzony</th><th>napęd 4x4</th><th></th><th></th></tr>
                </thead>
                <tbody>
                    {{#if vehicle}}
                        {{#each vehicle}}
                        <form>
                            <input type="hidden" name="id" value="{{_id}}">
                            {{#if edit}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td>
                                        <select class="control-style2" name="insured">
                                            <option value="TAK">TAK</option>
                                            <option value="NIE">NIE</option>
                                            <option value="BRAK DANYCH">BRAK DANYCH</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="control-style2" name="gas">
                                            <option value="TAK">TAK</option>
                                            <option value="NIE">NIE</option>
                                            <option value="BRAK DANYCH">BRAK DANYCH</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="control-style2" name="broken">
                                            <option value="TAK">TAK</option>
                                            <option value="NIE">NIE</option>
                                            <option value="BRAK DANYCH">BRAK DANYCH</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select class="control-style2" name="fxf">
                                            <option value="TAK">TAK</option>
                                            <option value="NIE">NIE</option>
                                            <option value="BRAK DANYCH">BRAK DANYCH</option>
                                        </select>
                                    </td>
                                    <td><input class="control-style control-style-magenta" formmethod="POST" formaction="/updateVehicle" type="submit" value="UPDATE"></td>
                                    <td><input class="control-style" formaction="/ri" type="submit" value="CANCEL"></td>
                                </tr>
                            {{else}}
                                <tr><td>{{@index}}</td><td>{{insured}}</td><td>{{gas}}</td><td>{{broken}}</td><td>{{fxf}}</td><td><input class="control-style control-style-red" formmethod="POST" formaction="/removeVehicle" onclick="return confirm('Are you sure you want to remove this vehicle?')" type="submit" value="DELETE"></td><td><input class="control-style" formmethod="GET" formaction="/editVehicle" type="submit" value="EDIT"></td></tr>
                            {{/if}}
                        </form>
                        {{/each}}
                    {{else}}
                        <tr><td colspan="7">no vehicles</td></tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>